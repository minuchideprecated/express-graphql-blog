{
  "compilerOptions": {
    "target": "ES5",
    "module": "CommonJS",
    "lib": ["dom", "es6", "es2018", "esnext.asynciterable"],
    "allowJs": true,
    "checkJs": true,
    "rootDir": "src",
    "outDir": "dist",
    "sourceMap": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "src/**/*.test.js"]
}
